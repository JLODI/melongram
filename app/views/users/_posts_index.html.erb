<% @user.posts.in_groups_of(3,false).each do |group| %>
    <div class="index-row">
            <% group.each do |post|%>
            <div class="padding:5px; display: flex; justify-content: center; ">
                <%= link_to post_path(post), style: "text-decoration: none", method: :get, data: { turbo_frame: 'modal'} do %>
                <div class="post-image-box" style="width: 300px">
                    <%= image_tag(post.images[0], class: "post-image", style: "object-fit: cover; width: 100%; height: 300px;") %>   
                    <div class="overlay-text">
                        <% if post.likes.count > 0 %>
                            <%= post.likes.count %><i class="bi bi-heart-fill"></i>
                        <% end %>
                        <% if post.comments.count > 0 %>
                            <%= post.comments.count %><i class="bi bi-chat-fill"></i>
                        <% end %>
                    </div>
                </div>
                <% end %>  
            </div>
            <% end %>
    </div>
<% end %>