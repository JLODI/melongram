<%= turbo_frame_tag comment do %>
    <div class="show-column">
        <div class="row">
            <div class="show-column">
                <%= comment.user.username %> <%= comment.text %>
            </div>
            <div class="show-column">
                <%= link_to "Edit", edit_comment_path(comment), class: "mr-2" %>
                <%= button_to "Delete", comment_path(comment), method: :delete, data: { confirm: "You are deleting your comment. Are you sure?"} %>
            </div>
        </div>
    </div>

<% end %>